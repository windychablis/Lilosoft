<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/color_bfbfbf"></stroke>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:top="1dp">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>

