<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.chablis.repair.QRCodeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/left"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="查询信息"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999" />

    <com.chablis.repair.widget.SpringScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--第一个表-->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bk_bg_1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/installing"
                    android:drawablePadding="8dp"
                    android:text="基本信息"
                    android:textColor="@color/color_sansansan" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ants_line"
                    android:layerType="software" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/d_bg_blue_stroke"
                    android:padding="1dp">

                    <!--第一行-->
                    <TextView
                        android:id="@+id/tv1"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:background="@color/color_eee"
                        android:text="终端型号"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv2"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tv1"
                        android:text="JH-JH-JH-01"
                        app:layout_widthPercent="28%" />

                    <TextView
                        android:id="@+id/tv3"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv2"
                        android:background="@color/color_eee"
                        android:text="终端类型"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv4"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv3"
                        android:text="取号机"
                        app:layout_widthPercent="28%" />


                    <!--第二行-->
                    <TextView
                        android:id="@+id/tv2_1"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1"
                        android:text="终端区划"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv2_2"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2"
                        android:layout_toRightOf="@id/tv2_1"
                        android:text="朝阳区"
                        app:layout_widthPercent="28%" />

                    <TextView
                        android:id="@+id/tv2_3"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3"
                        android:layout_toRightOf="@id/tv2_2"
                        android:background="@color/color_eee"
                        android:text="安装时间"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv2_4"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv4"
                        android:layout_toRightOf="@id/tv2_3"
                        android:text="2016-01-01"
                        app:layout_widthPercent="28%" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv1"
                        android:background="@color/color_bfbfbf" />

                    <!--第三行-->
                    <TextView
                        android:id="@+id/tv3_1"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2_1"
                        android:background="@color/color_eee"
                        android:text="所在区域"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv3_2"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2_2"
                        android:layout_toRightOf="@id/tv3_1"
                        android:text="一楼右"
                        app:layout_widthPercent="28%" />

                    <TextView
                        android:id="@+id/tv3_3"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2_3"
                        android:layout_toRightOf="@id/tv3_2"
                        android:background="@color/color_eee"
                        android:text="所在楼层"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv3_4"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv2_4"
                        android:layout_toRightOf="@id/tv3_3"
                        android:text="二楼"
                        app:layout_widthPercent="28%" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv2_1"
                        android:background="@color/color_bfbfbf" />

                    <!--第四行-->
                    <TextView
                        android:id="@+id/tv4_1"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3_1"
                        android:background="@color/color_eee"
                        android:text="网络地址"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv4_2"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3_2"
                        android:layout_toRightOf="@id/tv4_1"
                        android:text="192.168.0.1"
                        app:layout_widthPercent="78%" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv3_1"
                        android:background="@color/color_bfbfbf" />

                    <!--第五行-->
                    <TextView
                        android:id="@+id/tv5_1"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv4_1"
                        android:background="@color/color_eee"
                        android:text="网络地址"
                        app:layout_widthPercent="22%" />

                    <TextView
                        android:id="@+id/tv5_2"
                        style="@style/s_table_text"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv3_2"
                        android:layout_toRightOf="@id/tv5_1"
                        android:text="192.168.0.1"
                        app:layout_widthPercent="78%" />

                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv4_1"
                        android:background="@color/color_bfbfbf" />

                    <View
                        android:id="@+id/line_left1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/tv5_1"
                        android:layout_toRightOf="@id/tv1"
                        android:background="@color/color_bfbfbf" />

                    <View
                        android:id="@+id/line_left2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/tv3_1"
                        android:layout_toRightOf="@id/tv2"
                        android:background="@color/color_bfbfbf" />

                    <View
                        android:id="@+id/line_left3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/tv3_1"
                        android:layout_toRightOf="@id/tv3"
                        android:background="@color/color_bfbfbf" />
                </android.support.percent.PercentRelativeLayout>


            </LinearLayout>

            <!--第二个表-->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bk_bg_2"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/maintenance"
                    android:drawablePadding="8dp"
                    android:text="维护信息"
                    android:textColor="@color/color_sansansan" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ants_line"
                    android:layerType="software" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_class1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="大类"
                        android:textColor="@color/color_sansansan"
                        app:layout_widthPercent="25%" />

                    <TextView
                        android:id="@+id/tv_class2"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_class1"
                        android:gravity="center"
                        android:text="小类"
                        android:textColor="@color/color_sansansan"
                        app:layout_widthPercent="25%" />

                    <TextView
                        android:id="@+id/tv_class3"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_class2"
                        android:gravity="center"
                        android:text="报修时间"
                        android:textColor="@color/color_sansansan"
                        app:layout_widthPercent="25%" />

                    <TextView
                        android:id="@+id/tv_class4"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_class3"
                        android:gravity="center"
                        android:text="状态"
                        android:textColor="@color/color_sansansan"
                        app:layout_widthPercent="25%" />
                </android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_bfbfbf" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="8dp"
                        android:drawableTop="@mipmap/folder"
                        android:text="暂无记录" />
                </android.support.percent.PercentRelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </com.chablis.repair.widget.SpringScrollView>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/baoxiu"
            android:text="报修"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>


</android.support.constraint.ConstraintLayout>
